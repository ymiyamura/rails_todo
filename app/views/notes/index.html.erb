<p id="notice"><%= notice %></p>

<h1>Listing Notes</h1>
<table>
  <thead>
    <tr>
      <th>user_id</th>
      <th><%= sortable "title", "Title" %></th>
      <th><%= sortable "body", "Body" %></th>
      <th><%= sortable "limit_date", "LimitDate" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.user_id %></td>
        <td><%= note.title %></td>
        <td><%= note.body %></td>
        <td><%= note.limit_date %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
<% if user_signed_in? %>
<%= link_to 'log out', destroy_user_session_path, method: :delete %>
<% end %>
